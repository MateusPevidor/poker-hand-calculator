{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["es6", "DOM"],
    "target": "es2016",
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ]
}